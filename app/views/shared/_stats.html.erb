<% @user ||= current_user %>        
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>


<!-- b/c 'stats' will be included on user show and home pages, first line picks the correct user
     it does nothing when @user is defined (profile page), but sets @user to current_user when undefined (home page) -->