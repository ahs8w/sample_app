<% provide(:title, "Sign In") %>
<h1>Sign In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>  
         <!-- there is no session model and no @session for Rails to infer the action of the form
         so it is necessary to indicate the ':resource,' as well as 'url: resource_path' -->

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign In", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>




